<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatchHalvesFragment3">

    <ImageView
        android:id="@+id/appleRightImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/matchHalvesL2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@mipmap/koala_right" />

    <LinearLayout
        android:id="@+id/appleOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appleRightImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/appleLeftImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:src="@mipmap/koala_left" />

        <ImageView
            android:id="@+id/appleOption2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:src="@mipmap/apple_left" />

        <ImageView
            android:id="@+id/appleOption3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:src="@mipmap/star_left" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:id="@+id/matchHalvesL2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level 3"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancel"
            android:layout_margin="10dp"
            android:src="@drawable/ic_cancel_black_24dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/appleCorrect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/appleOption"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="CORRECT!"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXIT"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@id/appleCorrect"
        android:visibility="invisible"
        android:id="@+id/appleNext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>


</RelativeLayout>